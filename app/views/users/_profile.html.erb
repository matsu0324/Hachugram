<div class="container">
    <div class="columns is-centered">
      <div class="column is-8">
        <div class="columns is-centered">
          <div class="column is-4">
            <figure class="image is-128x128"  style="margin-left: auto; margin-right: auto;">
              <%= attachment_image_tag user, :profile_image, fallback: "no-image.png", class: "profile_image is-rounded" %>
            </figure>
          </div>
          <div class="column is-8">
            <table class="table is-fullwidth">
              <tr>
                <td class="is-size-4">
                  名前： <strong><%= user.username %></strong>
                </td>
              </tr>
            </table>
            <table class="table is-fullwidth">
              <tr>
                <td>
                  自己紹介：<%= user.profile %>
                </td>
              </tr>
              <tr>
                <td>フォロー数: <%= link_to user.followings.count, user_followings_path(user) %></td>
              </tr>
              <tr>
                <td>フォロワー数： <%= link_to user.followers.count, user_followers_path(user) %></td>
              </tr>
              <tr>
                <% if user.id != current_user.id %>
                  <% if current_user.following?(user) %>
                    <td><%= link_to "フォローを外す", user_relationships_path(user), method: :delete, class: "btn btn-primary" %></td>
                  <% else %>
                    <td><%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-success" %></td>
                  <% end %>
                <% else %>
                  <td>メールアドレス: <%= user.email %></td>
                  <td>
                    <%= link_to "編集", edit_user_path(user), class: "button is-primary" %>
                  </td>
                <% end %>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
